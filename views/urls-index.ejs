<%- include('partials/_head') %>

<body>
  <%- include('partials/_header') %>
  <main style="margin: 1em;">
    <h3>My URLs</h3>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Short URL ID</th>
          <th scope="col">Long URL</th>
          <th scope="col">Edit</th>
          <th scope="col">Delete</th>
        </tr>
      </thead>
      <tbody>
        <% for (let url of urls) { %>
        <tr>
          <td><a href="/urls/<%= url.id %>"><%= url.id %></a></td>
          <td><%= url.longUrl %></td>
          <td><a class="btn btn-outline-primary" href="/urls/<%= url.id %>">Edit</a></td>
          <td>
            <form action="/urls/<%= url.id %>?_method=DELETE" method="post"><button class="btn btn-outline-danger"
                type="submit">Delete</button> </form>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </main>
  <%- include('partials/_bootstrap-scripts') %>
</body>

</html>
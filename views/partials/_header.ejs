<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="<%= user ? '/urls' : '/' %>">tinyapp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav mr-auto">
        <% if (user) { %>
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        <% } %>

      </div>
      <% if (!user) { %>
      <a class="btn btn-outline-dark my-2 my-sm-0 mx-4" href="/register">Register</a>
      <a class="btn btn-outline-dark my-2 my-sm-0" href="/login">Login</a>
      <%} else { %>
      <span class="mx-4">Logged in as: <%= user.email %> &nbsp&nbsp</span>
      <form action="/logout" method="post">
        <button class="btn btn-outline-dark my-2 my-sm-0" type="submit">Logout</button>
      </form>
      <% } %>
    </div>
  </nav>
</header>